const menuAPI = await res.json();
---

<footer class="flex flex-wrap justify-center gap-6 items-center text-white font-semibold text-xs h-20">
    <Image class="mr-6" width="130" height="80" src={myBackground} alt="Astro Logo" />
    <p>Simon Â© 2024</p>
    {menuAPI && menuAPI.map(item => (
            <p>{item.name}</p>
    ))}
</footer>



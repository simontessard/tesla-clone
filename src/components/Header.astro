---

const res = await fetch("http://astro-headless.local/wp-json/wp/v2/navigation/8");
const menuAPI = await res.json();

---

<header class="relative z-10 bg-none text-black flex justify-between items-center h-24 -mt-28 mb-16 p-4">
    <a href="/" class='text-2xl'>{ menuAPI.title.rendered }</a>
    <nav>
        <ul class="flex gap-6" set:html={menuAPI.content.rendered}> </ul>
    </nav>
</header>

<script>
    import gsap from "gsap";

    gsap.to("header", { duration: .6, y: 100 });
</script>

